<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_person_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                android:layout_margin="25dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/shodiyor_xurramov"/>


            <TextView
                android:id="@+id/tv_person_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:text="@string/_998992667967"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="15dp"
            android:background="#cdcdcd"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/person_call"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/call"
                android:adjustViewBounds="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/person_sms"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/sms"
                android:adjustViewBounds="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/person_video"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/video"
                android:adjustViewBounds="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>